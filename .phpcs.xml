<?xml version="1.0"?>
<ruleset name="WC Admin Order Notes">
    <description>WordPress Coding Standards for WC Admin Order Notes plugin.</description>

    <!-- What to scan -->
    <file>.</file>
    <exclude-pattern>/vendor/</exclude-pattern>
    <exclude-pattern>/node_modules/</exclude-pattern>
    <exclude-pattern>/tests/</exclude-pattern>
    <exclude-pattern>/languages/</exclude-pattern>
    <exclude-pattern>*.min.js</exclude-pattern>
    <exclude-pattern>*.min.css</exclude-pattern>

    <!-- How to scan -->
    <arg value="sp"/> <!-- Show sniff and progress -->
    <arg name="basepath" value="./"/><!-- Strip the file paths down to the relevant bit -->
    <arg name="colors"/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="8"/><!-- Enables parallel processing when available for faster results. -->

    <!-- Rules: WordPress Coding Standards -->
    <config name="minimum_supported_wp_version" value="5.0"/>

    <rule ref="WordPress">
        <!-- Allow short array syntax -->
        <exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
        
        <!-- Allow ::class syntax -->
        <exclude name="Squiz.Classes.SelfMemberReference.NotUsed"/>
        
        <!-- We use namespaces -->
        <exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
        <exclude name="WordPress.Files.FileName.NotHyphenatedLowercase"/>
    </rule>

    <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
        <properties>
            <property name="prefixes" type="array">
                <element value="wc_admin_order_notes"/>
                <element value="WC_ADMIN_ORDER_NOTES"/>
                <element value="WCAdminOrderNotes"/>
            </property>
        </properties>
    </rule>

    <!-- Verify that the text_domain is set to the desired text-domain -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="wc-admin-order-notes"/>
            </property>
        </properties>
    </rule>

    <!-- Allow for theme specific exceptions to the file name rules based on the theme hierarchy. -->
    <rule ref="WordPress.Files.FileName">
        <properties>
            <property name="is_theme" value="false"/>
        </properties>
    </rule>

    <!-- Set the minimum supported WP version. This is used by several sniffs. -->
    <config name="minimum_supported_wp_version" value="5.0"/>

    <!-- Verify that everything in the global namespace is prefixed with a plugin specific prefix. -->
    <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
        <properties>
            <property name="prefixes" type="array" value="wc_admin_order_notes,WC_ADMIN_ORDER_NOTES,WCAdminOrderNotes"/>
        </properties>
    </rule>
</ruleset> 